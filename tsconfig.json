{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./build",
    "sourceMap": true,
	//"sourceRoot": "../../../../src",
	// "sourceRoot": "../../src/",
	// "sourceRoot": "../../../../../src",
    // "inlineSources": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}